<div class="card">
    <h3><%= video.title %></h3>
    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; border-radius: 5px; margin-bottom: 10px;">
        <!-- Check if it's a YouTube embed or a direct video file -->
        <% if (video.url.includes('youtube.com/embed/')) { %>
            <iframe
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                src="<%= video.url %>"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
        <% } else { %>
            <video controls style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
                <source src="<%= video.url %>" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        <% } %>
    </div>
    <p><%= video.description %></p>
    <p><small>Uploaded: <%= video.uploadedAt.toLocaleDateString() %></small></p>
</div>