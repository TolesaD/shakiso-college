<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Photo Gallery'}) %>
</head>
<body>
    <%- include('partials/header', {user}) %>
    
    <section class="hero" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('../images/gallery-bg.jpg');">
        <div class="container">
            <div class="hero-content">
                <h1>Photo Gallery</h1>
                <p>Explore moments from our campus life, events, and student activities.</p>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="gallery">
                <% if (photos.length > 0) { %>
                    <% photos.forEach(photo => { %>
                        <div class="gallery-item">
                            <img src="<%= photo.imagePath %>" alt="<%= photo.title %>">
                            <div class="overlay">
                                <h3><%= photo.title %></h3>
                                <% if (photo.description) { %>
                                    <p><%= photo.description %></p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No photos available in the gallery.</p>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>