
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Video Gallery'}) %>
</head>
<body>
    <%- include('partials/header', {user}) %>
    
    <section class="hero" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('../images/videos-bg.jpg');">
        <div class="container">
            <div class="hero-content">
                <h1>Video Gallery</h1>
                <p>Watch our campus tours, events, and educational content.</p>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="video-grid">
                <% if (videos.length > 0) { %>
                    <% videos.forEach(video => { %>
                        <div class="video-card">
                            <div class="video-container">
                                <% if (video.isYoutube) { %>
                                    <iframe src="<%= video.videoPath %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <% } else { %>
                                    <video controls>
                                        <source src="<%= video.videoPath %>" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                <% } %>
                            </div>
                            <div class="video-info">
                                <h3><%= video.title %></h3>
                                <% if (video.description) { %>
                                    <p><%= video.description %></p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No videos available in the gallery.</p>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>