<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: 'Edit Photo'}) %>
</head>
<body>
    <%- include('../partials/admin-header') %>
    
    <main class="admin-main">
        <div class="container">
            <h1>Edit Photo</h1>
            
            <% if (messages.success) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <form action="/admin/photos/<%= photo._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Current Image</label>
                    <img src="<%= photo.imagePath %>" alt="Current photo" style="max-width: 300px; display: block; margin-bottom: 1rem;">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" 
                           value="<%= photo.title %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="form-control"><%= photo.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="photo">New Image (Leave blank to keep current)</label>
                    <input type="file" id="photo" name="photo" class="form-control">
                </div>
                <button type="submit" class="btn">Update Photo</button>
                <a href="/admin/photos" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>