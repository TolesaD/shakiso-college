<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: 'Manage Announcements'}) %>
    <style>
        .admin-table {
            width: 100%;
            border-collapse: collapse;
            margin: 1rem 0;
        }
        .admin-table th, .admin-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .admin-table th {
            background-color: #2c3e50;
            color: white;
        }
        .admin-table tr:hover {
            background-color: #f5f5f5;
        }
        .btn-group {
            display: flex;
            gap: 0.5rem;
        }
        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
        .card {
            background: white;
            padding: 2rem;
            border-radius: 5px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <header class="admin-header">
        <div class="container">
            <nav class="admin-nav">
                <a href="/admin/dashboard" class="logo">Admin Dashboard</a>
                <ul class="admin-nav-links">
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/announcements" class="active">Announcements</a></li>
                    <li><a href="/admin/photos">Photos</a></li>
                    <li><a href="/admin/videos">Videos</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="admin-main">
        <div class="container">
            <h1>Manage Announcements</h1>
            
            <% if (messages.success) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <div class="card">
                <h2>Create New Announcement</h2>
                <a href="/admin/announcements/new" class="btn">Add New Announcement</a>
            </div>

            <div class="card">
                <h2>Existing Announcements</h2>
                <% if (announcements.length > 0) { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% announcements.forEach((announcement) => { %>
                                <tr>
                                    <td><%= announcement.title %></td>
                                    <td><%= announcement.content.length > 50 ? announcement.content.substring(0, 50) + '...' : announcement.content %></td>
                                    <td><%= announcement.createdAt.toLocaleDateString() %></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/admin/announcements/<%= announcement._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                            <form action="/admin/announcements/<%= announcement._id %>/delete" method="POST">
                                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                            </form>
</div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No announcements found.</p>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>