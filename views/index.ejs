<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Home'}) %>
    <style>
        .video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            margin: 2rem 0;
        }
        .video-card {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        .video-card:hover {
            transform: translateY(-5px);
        }
        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }
        .video-container iframe,
        .video-container video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }
        .video-info {
            padding: 1.5rem;
        }
        .video-info h3 {
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <%- include('partials/header', {user}) %>
    
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1>Welcome to Shakiso Poly-Technic College</h1>
                <p>Empowering the future through quality technical and vocational education.</p>
                <a href="/about" class="btn">Learn More</a>
                <a href="/contact" class="btn">Contact Us</a>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <h2 class="section-title">College Highlights</h2>
            <div class="highlights">
                <div class="highlight-card">
                    <i class="fas fa-graduation-cap"></i>
                    <h3>Quality Education</h3>
                    <p>We provide hands-on training and quality education to prepare trainees for the workforce.</p>
                </div>
                <div class="highlight-card">
                    <i class="fas fa-flask"></i>
                    <h3>Modern Labs</h3>
                    <p>State-of-the-art laboratory equipped with the latest technology for practical learning.</p>
                </div>
                <div class="highlight-card">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <h3>Expert Faculty</h3>
                    <p>Our experienced instructors are dedicated to trainees success and professional development.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section bg-light">
        <div class="container">
            <h2 class="section-title">Latest Announcements</h2>
            <div class="announcements">
                <% if (announcements.length > 0) { %>
                    <% announcements.forEach(announcement => { %>
                        <div class="announcement-item">
                            <h3><%= announcement.title %></h3>
                            <p><%= announcement.content %></p>
                            <span class="date"><%= announcement.createdAt.toLocaleDateString() %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No announcements available.</p>
                <% } %>
            </div>
            <a href="/about" class="btn">View All Announcements</a>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <h2 class="section-title">Photo Gallery</h2>
            <div class="gallery">
                <% if (photos.length > 0) { %>
                    <% photos.forEach(photo => { %>
                        <div class="gallery-item">
                            <img src="<%= photo.imagePath %>" alt="<%= photo.title %>">
                            <div class="overlay">
                                <h3><%= photo.title %></h3>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No photos available.</p>
                <% } %>
            </div>
            <a href="/gallery" class="btn">View Full Gallery</a>
        </div>
    </section>

    <section class="section bg-light">
        <div class="container">
            <h2 class="section-title">Latest Videos</h2>
            <div class="video-grid">
                <% if (videos.length > 0) { %>
                    <% videos.forEach(video => { %>
                        <div class="video-card">
                            <div class="video-container">
                                <% if (video.isYoutube) { %>
                                    <iframe src="<%= video.videoPath %>" frameborder="0" allowfullscreen></iframe>
                                <% } else { %>
                                    <video controls>
                                        <source src="<%= video.videoPath %>" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                <% } %>
                            </div>
                            <div class="video-info">
                                <h3><%= video.title %></h3>
                                <% if (video.description) { %>
                                    <p><%= video.description %></p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No videos available.</p>
                <% } %>
            </div>
            <div class="text-center">
                <a href="/videos" class="btn">View All Videos</a>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>